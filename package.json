{
    "name": "g4-engine-client",
    "displayName": "g4-engine-client",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.102.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "New-Project",
                "category": "G4",
                "title": "Creates a New Rhino Project"
            },
            {
                "command": "Start-Automation",
                "category": "G4",
                "title": "Start Automation Workflow on G4 Engine"
            },
            {
                "command": "Show-Workflow",
                "category": "G4",
                "title": "Open G4 Engine Embedded Application"
            }
        ],
        "grammars": [
            {
                "language": "g4log",
                "scopeName": "source.g4.log",
                "path": "./languages/g4-log-tm-language.json"
            }
        ],
        "languages": [
            {
                "id": "g4log",
                "aliases": [
                    "G4Log",
                    "g4Log"
                ],
                "extensions": []
            }
        ],
        "notebooks": [
            {
                "id": "G4.MdJsonNotebook",
                "type": "G4.MdJsonNotebook",
                "displayName": "Markdown + JSON Notebook",
                "selector": [
                    {
                        "filenamePattern": "*.mdjson"
                    }
                ]
            }
        ],
        "views": {
            "g4Container": [
                {
                    "type": "webview",
                    "id": "g4View",
                    "name": "Engine Client",
                    "icon": "resources/g4-icon.svg"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "g4Container",
                    "title": "G4",
                    "icon": "resources/g4-icon.svg"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.102.0",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "@typescript-eslint/parser": "^8.31.1",
        "@vscode/test-cli": "^0.0.11",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.25.1",
        "ts-loader": "^9.5.2",
        "typescript": "^5.8.3",
        "webpack": "^5.99.7",
        "webpack-cli": "^6.0.1"
    },
    "files": [
        "resources",
        "languages"
    ],
    "dependencies": {
        "@microsoft/signalr": "^8.0.7",
        "node-fetch": "^3.3.2"
    }
}